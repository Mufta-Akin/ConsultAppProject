@model Patient

<partial name="_Breadcrumbs" model=@(new [] { ("/", "Home"), ("/patient", "Patients"), ("","Delete") })>

    <h3 class="mt-4 mb-4">Delete Patient</h3>

    <h4 class="mb-4">Are you sure you want to delete this Patient?</h4>

    <div>
        <!-- display the patient using a <dl> as per Details.cshtml -->
        <div class="col card rounded shadow pt-3">
            <dl class="row">
                <dt class="col-5">Name</dt>
                <dd class="col-7">@Model.User.Name</dd>

                <dt class="col-5">Course</dt>
                <dd class="col-7">@Model.Address</dd>

                <dt class="col-5">Age</dt>
                <dd class="col-7">@Model.Age</dd>

                <dt class="col-5">Email</dt>
                <dd class="col-7">@Model.User.Email</dd>
                                
            </dl>
        </div>

        <div class="mt-4">
            <!-- create a form to submit post request to DeleteConfirm action
                student Id should be a hidden input field named 'Id" in the form
                add type submit input button
                add cancel link which calls Index action -->
            <form asp-controller="Patient" asp-action="DeletePatientConfirmed" type="post">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Confirm" class="btn btn-danger" />
                <a class="btn btn-secondary" asp-controller="Patient" asp-action="Index">Cancel</a>
            </form>
        </div>

    </div>
